<Window x:Class="Torpedo.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="TorpedoGame" Height="450" Width="800"
        WindowStartupLocation ="CenterScreen">
    <Grid Background="#2c2137">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Foreground="#446176" Content="TORPEDO GAME" FontSize="56"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

        <Frame x:Name="Main" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
