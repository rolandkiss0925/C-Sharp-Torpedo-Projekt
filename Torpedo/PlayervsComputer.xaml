<Page x:Class="Torpedo.PlayervsComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Torpedo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayervsComputer">

    <Grid>
        <Label Content="Player 1" FontSize="32"  HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#3fac95"/>
        <Label Content="Name:" FontSize="16" HorizontalAlignment="Left" Margin="270,90,0,0" VerticalAlignment="Top" Foreground="#3fac95" RenderTransformOrigin="-0.407,0.598"/>
        <TextBox HorizontalAlignment="Right" FontSize="16" Margin="0,95,270,0" TextWrapping="Wrap" Text="Your Name" VerticalAlignment="Top" Width="150" Foreground="#2c2137" Background="#3fac95"/>
        <Button Content="Cancel" Click="OnCancel"  HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="120" Height="32" Padding="0" Margin="50,0,0,35" Background="#446176" Foreground="#3fac95" BorderBrush="#3fac95"/>
        <Button Content="Start" Click="OnStart"  HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="120" Height="32" Padding="0" Margin="0,0,50,35" Background="#446176" Foreground="#3fac95" BorderBrush="#3fac95"/>
    </Grid>
</Page>
